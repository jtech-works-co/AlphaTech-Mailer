{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "./_src/",
		"outDir": "./",
		"verbatimModuleSyntax": true,
		"moduleResolution": "nodenext",
	},
	"include": [
		"_src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}